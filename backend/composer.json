{
  "name": "tripmate/backend",
  "type": "project",
  "autoload": {
    "psr-4": {
      "Tripmate\\Backend\\": "app/"
    }
  },
  "require": {
    "php": "^8.2",
    "respect/validation": "^2.4",
    "altorouter/altorouter": "^2.0",
    "firebase/php-jwt": "^6.11"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.65",
    "rector/rector": "^1.2",
    "phpstan/phpstan": "^1.12",
    "phpmd/phpmd": "^2.15"
  },
  "scripts": {
    "fix": "php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes",
    "fix:dry": "php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes --dry-run --diff",
    "rector": "rector process --config=rector.php",
    "rector:dry": "rector process --config=rector.php --dry-run",
    "stan": "phpstan analyse --configuration=phpstan.neon --memory-limit=1G",
    "md": "phpmd app,tests text phpmd.xml",
    "md:scoped": "phpmd",

    "qa": [
      "@fix:dry",
      "@rector:dry",
      "@stan",
      "@md"
    ],
    "refactor": [
      "@rector",
      "@fix"
    ],

    "fx": "@fix",
    "fx:dry": "@fix:dry",
    "rt": "@rector",
    "rt:dry": "@rector:dry",
    "st": "@stan"
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
